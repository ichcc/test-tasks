#!/usr/bin/perl

use strict;
use warnings;
 
# sub feel_array (matrix_ar, file_row)
sub feel_array (@_)
{
   print $_,"\n" for split ' ', "$_[0]";
    # return $matrix_ar
}

my $filename = 'diagonal_source.txt';
if (open(my $fh, '<:encoding(UTF-8)', $filename)) {
  while (my $row = <$fh>) {
    chomp $row;
    feel_array ("$row\n");
  }
} else {
  warn "Could not open file '$filename' $!";
}


